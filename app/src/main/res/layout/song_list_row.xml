<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_list_card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="?colorPrimary"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/album_art"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/size8dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="@dimen/size8dp"
            app:cardElevation="4dp"
            app:srcCompat="@drawable/empty"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/album_art"
            android:layout_alignTop="@+id/album_art"
            android:layout_marginStart="12sp"
            android:layout_toEndOf="@+id/album_art"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.riseapps.xmusic.widgets.MainTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/size14sp"
                tools:text="TextView" />

            <com.riseapps.xmusic.widgets.MainTextViewSub
                android:id="@+id/artist_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size13sp"
                tools:text="TextView" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size8dp"
            android:background="@null"
            android:tint="?android:textColorPrimary"
            app:srcCompat="@drawable/ic_like" />

    </RelativeLayout>
</android.support.v7.widget.CardView>